
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>超市账单管理系统</title>
    <link rel="stylesheet" href="/stylesheets/index.css"/>
    <link rel="stylesheet" href="/stylesheets/common.css"/>
</head>
<body>
    <%- include('header')   %>
    <section class="publicMian w1200">
        <%- include('contentLeft')   %>
        <div class="right">
            <div class="location">
                <strong>你现在所在的位置是:</strong>
                <span>账单管理页面</span>
            </div>
            <div class="search">
                <span>员工姓名:</span>
                <input type="text" id="username" placeholder="请输入收银员"/>
                <span>窗口号:</span>
                <input type="text" id="number" placeholder="请输入窗口号"/>
                <input type="button" value="查询" id="queryBtn"/>              
                <a  href="#" onclick="history.back(-1)">返回</a>
            </div>
            <!--账单表格 样式和供应商公用-->
            <table class="providerTable" cellpadding="0" cellspacing="0">
                <tr class="firstTr">
                    <th width="10%">收银窗口</th>
                    <th width="15%">收银员</th>
                    <th width="20%">账单编码</th>
                    <th width="10%">账单金额</th>
                    <th width="15%">创建时间</th>
                    <th width="30%">操作</th>
                </tr>
            <%    result.forEach((item,index)=>{   %>
                <tr class="trmiddle">
                    <td><%- item.no1  %></td>
                    <td><%- item.no2  %></td>
                    <td><%- item.no3  %></td>
                    <td><%- item.no4  %></td>
                    <td><%- item.no5  %></td>
                    <td>
                        <a href="javascript:;" class="tr_a1" onclick="window.location.href='/saleView?_id=<%- item._id %>'">查看</a>
                        <a href="javascript:;" class="tr_a2" onclick="window.location.href='/saleUpdate?_id=<%- item._id %>'">修改</a>
                        <a href="javascript:;" class="removeBill tr_a3" onclick="getId('<%- item._id %>')">删除</a>
                    </td>
                </tr>
            <%    })   %>
                <tr id="trfoot">
                    <td colspan="6" class="h4 text-center text-primary">
                      <a href="/salequery?pageNo=1&name=<%- name?name:'' %>&number=<%- number?number:'' %>">首页</a>
                      <a href="/salequery?pageNo=<%- pageNo<=1?1:pageNo-1 %>&name=<%- name?name:'' %>&number=<%- number?number:'' %>">上一页</a>
                      <a href="/salequery?pageNo=<%- pageNo>=totalpage?totalpage:pageNo+1 %>&name=<%- name?name:'' %>&number=<%- number?number:'' %>">下一页</a>
                      <a href="/salequery?pageNo=<%- totalpage %>&name=<%- name?name:'' %>&number=<%- number?number:'' %>">尾页</a>
                      <p>
                        <%- pageNo %>/<%- totalpage %> 共<%- count %>条
                      </p>
                    </td>
                  </tr>
            </table>
        </div>
    </section>

<!--点击删除按钮后弹出的页面-->
<div class="zhezhao"></div>
<div class="remove" id="removeBi">
    <div class="removerChid">
        <h2>提示</h2>
        <div class="removeMain">
            <p>你确定要删除该订单吗？</p>
            <a href="#" id="yes">确定</a>
            <a href="#" id="no">取消</a>
        </div>
    </div>
</div>

    <footer class="footer w1200">
    </footer>

<!-- <script src="js/jquery.js"></script> -->
<script src="/bootstrap/js/jquery-1.10.1.js"></script>
<!-- <script src="js/js.js"></script> -->
<script src="/javascripts/js.js"></script>
<!-- <script src="js/time.js"></script> -->
<script src="/javascripts/time.js"></script>
<script>
     $("#queryBtn").click(function(){
        var username=$("#username").val();
        // var payment=$("#payment option:selected").text();
        var number=$("#number").val();
       window.location.href="/salequery?username="+username+"&number="+number;
    })
    var arg = null;  
    function getId(_id){arg = _id;}
    function del(arg){ window.location.href="/saleDelete?_id="+arg; }

    $(".list li").eq(1).attr("id","active");
</script>
</body>
</html>